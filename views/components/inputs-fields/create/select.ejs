<div class="input-group mt-4">
  <label for="<%= name %>" class="input-group-text"><%= label %></label>
  <select class="form-select modify px-4" id="<%= name %>" name="<%= name %>" <%= (multiple) ? "multiple" : "" %>>
    <% if(!multiple) { %>
      <option value="" selected>اختر</option>
    <% } %>
    <% data.forEach(dataItem=> { %>
      <option value="<%= dataItem._id %>"><%= dataItem.name %></option>
    <% }) %>
  </select>
</div>
<div class="text-danger text-danger-<%= name %> mt-1" style="display: none;"></div>