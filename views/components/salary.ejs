<h1 id="title"><%= arabicFromDate %><i class="fa-solid fa-arrow-left mx-5"></i><%= arabicToDate %></h1>
<div class="container-xl">
  <% if(attendanceWorkers.length !== 0) { %>
    <div class="table-responsive">
      <table class="table table-hover table-striped-columns table-bordered border-dark align-middle caption-top">
        <caption class="mx-4 fs-5">
          <span>عمال المرتب الأسبوعي</span>
        </caption>
        <thead>
          <tr class="table-dark">
            <th scope="col">الرقم</th>
            <th scope="col">إسم العامل</th>
            <th scope="col">المرتب</th>
            <th scope="col">تفاصيل الحضور</th>
            <th scope="col">تم</th>
          </tr>
        </thead>
        <tbody>
          <% attendanceWorkers.forEach((worker, index)=>{ %>
            <tr>
              <th class="table-dark" scope="row">
                <%= index+1 %>
              </th>
              <td>
                <%= worker.name %>
              </td>
              <td>
                <%= Math.ceil(worker.totalPrice) %>
              </td>
              <td>
                <a href="/attendance?date=daterange:<%= `${fromDate.toISOString().split('T')[0]},${toDate.toISOString().split('T')[0]}` %>&worker=objectid:<%= worker._id %>" class="btn">تفاصيل</a>
              </td>
              <td>
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" role="switch">
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <div class="alert alert-warning" role="alert">لا يوجد بيانات</div>
  <% } %>

  <% if(productionWorkers.length !== 0) { %>
    <div class="table-responsive">
      <table class="table table-hover table-striped-columns table-bordered border-dark align-middle caption-top">
        <caption class="mx-4 fs-5">
          <span>عمال الإنتاج</span>
        </caption>
        <thead>
          <tr class="table-dark">
            <th scope="col">الرقم</th>
            <th scope="col">إسم العامل</th>
            <th scope="col">المرتب بدون الحافز</th>
            <th scope="col">قيمة الحافز</th>
            <th scope="col">المجموع</th>
            <th scope="col">تفاصيل الإنتاج</th>
            <th scope="col">تم</th>
          </tr>
        </thead>
        <tbody>
          <% productionWorkers.forEach((worker, index)=>{ %>
            <tr>
              <th class="table-dark" scope="row">
                <%= index+1 %>
              </th>
              <td>
                <%= worker.name %>
              </td>
              <td>
                <%= Math.ceil(worker.totalPrice) %>
              </td>
              <td>
                <%= Math.ceil(worker.bonus) %>
              </td>
              <td>
                <%= Math.ceil(worker.totalSalary) %>
              </td>
              <td>
                <a href="/production?date=daterange:<%= `${fromDate.toISOString().split('T')[0]},${toDate.toISOString().split('T')[0]}` %>&worker=objectid:<%= worker._id %>" class="btn">تفاصيل</a>
              </td>
              <td>
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" role="switch">
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <div class="alert alert-warning" role="alert">لا يوجد بيانات</div>
  <% } %>
</div>